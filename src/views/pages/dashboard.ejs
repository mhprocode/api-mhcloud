<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<header class="bg-white shadow">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">
      Admin Dashboard (Halo, <%= locals.username ? username : 'Admin' %>!)
    </h1>
  </div>
</header>

<main>
  <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">

    <% if (locals.stats) { %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                  <dd class="text-3xl font-semibold text-gray-900"><%= stats.db_stats.total_users %></dd>
                  <dd class="text-sm text-gray-600">
                    <span class="font-medium text-indigo-600"><%= stats.db_stats.roles.FREE %></span> Free | 
                    <span class="font-medium text-yellow-600"><%= stats.db_stats.roles.PREMIUM %></span> Premium
                  </dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h18M16.5 3L21 7.5m0 0L16.5 12M21 7.5H3" /></svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total Request (All Time)</dt>
                  <dd class="text-3xl font-semibold text-gray-900"><%= stats.db_stats.total_requests.toLocaleString('id-ID') %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

         <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                 <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Request Hari Ini</dt>
                  <dd class="text-3xl font-semibold text-gray-900"><%= stats.db_stats.requests_today.toLocaleString('id-ID') %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" /></svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">Total IP Diblokir</dt>
                  <dd class="text-3xl font-semibold text-red-600"><%= stats.db_stats.banned_ips %></dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>

      <h2 class="text-2xl font-semibold text-gray-900 mt-12 mb-4">Informasi Server & Aplikasi</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          
          <div class="bg-white shadow rounded-lg p-6">
              <dl class="divide-y divide-gray-200">
                  <div class="py-3 flex justify-between text-sm">
                      <dt class="font-medium text-gray-600">Hostname</dt>
                      <dd class="text-gray-900 font-mono"><%= stats.server_stats.hostname %></dd>
                  </div>
                   <div class="py-3 flex justify-between text-sm">
                      <dt class="font-medium text-gray-600">IP Server</dt>
                      <dd class="text-gray-900 font-mono"><%= stats.server_stats.server_ip %></dd>
                  </div>
                   <div class="py-3 flex justify-between text-sm">
                      <dt class="font-medium text-gray-600">Platform OS</dt>
                      <dd class="text-gray-900"><%= stats.server_stats.os_platform %> (<%= stats.server_stats.os_type %>)</dd>
                  </div>
                   <div class="py-3 flex justify-between text-sm">
                      <dt class="font-medium text-gray-600">Versi Node.js</dt>
                      <dd class="text-gray-900 font-mono"><%= stats.server_stats.node_version %></dd>
                  </div>
                   <div class="py-3 flex justify-between text-sm">
                      <dt class="font-medium text-gray-600">App Uptime</dt>
                      <dd class="text-gray-900 font-mono"><%= stats.server_stats.app_uptime %></dd>
                  </div>
              </dl>
          </div>

          <div class="bg-white shadow rounded-lg p-6">
              <dl class="divide-y divide-gray-200">
                  <div class="py-3 flex justify-between text-sm">
                      <dt class="font-medium text-gray-600">CPU</dt>
                      <dd class="text-gray-900 text-right"><%= stats.server_stats.cpu_model %></dd>
                  </div>
                  <div class="py-3 flex justify-between text-sm">
                      <dt class="font-medium text-gray-600">CPU Cores</dt>
                      <dd class="text-gray-900"><%= stats.server_stats.cpu_cores %> Cores</dd>
                  </div>
                  <div class="py-3">
                      <dt class="text-sm font-medium text-gray-600 mb-2">Penggunaan RAM</dt>
                      <dd class="flex items-center justify-between font-mono text-xs text-gray-500 mb-1">
                          <span>Used: <%= stats.server_stats.ram_used %></span>
                          <span>Total: <%= stats.server_stats.ram_total %></span>
                      </dd>
                      <div class="w-full bg-gray-200 rounded-full h-4 shadow-inner">
                          <div class="bg-blue-600 h-4 rounded-full flex items-center justify-center text-white text-xs font-bold" 
                               style="width: <%= stats.server_stats.ram_usage_percent %>%;">
                               <%= stats.server_stats.ram_usage_percent %>%
                          </div>
                      </div>
                  </div>
              </dl>
          </div>
      </div>
    
    <% } else { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
            <p class="font-bold">Error</p>
            <p><%= locals.error ? error : "Gagal memuat data statistik dashboard." %></p>
        </div>
    <% } %>

  </div>
</main>

<%- include('../partials/footer') %>