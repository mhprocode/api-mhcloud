<%- include('../../partials/header') %>

<nav class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      
      <div class="font-bold text-2xl text-indigo-600">
        <a href="/">API MhCloud</a>
      </div>

      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a>
        <a href="/docs" class="text-gray-600 hover:text-indigo-600 font-medium">Dokumentasi</a>
        <a href="/login" class="text-gray-600 hover:text-indigo-600 font-medium">Login</a>
        <a href="/register" class="bg-indigo-600 text-white px-5 py-2 rounded-md hover:bg-indigo-700 font-semibold shadow-sm text-sm">
          Register Gratis
        </a>
      </div>

      <div class="md:hidden">
        <button id="hamburger-btn" class="text-gray-700 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-2">
      <a href="/" class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 rounded-md font-medium">Home</a>
      <a href="/docs" class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 rounded-md font-medium">Dokumentasi</a>
      <a href="/login" class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 rounded-md font-medium">Login</a>
      <a href="/register" class="block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-semibold shadow-sm">
        Register Gratis
      </a>
    </div>
  </div>
</nav>

<main class="container mx-auto mt-16 px-6">
   <div class="text-center py-20 md:py-24">
     <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 leading-tight">
       API MhCloud <span class="text-indigo-600">Cepat & Andal</span>
     </h1>
     <p class="text-xl text-gray-500 mt-6 max-w-2xl mx-auto">
       Dapatkan data terstruktur dari berbagai sumber langsung ke aplikasi Anda. Cepat, mudah, dan siap pakai.
     </p>
     <a href="/register" class="mt-10 inline-block bg-indigo-600 text-white px-10 py-4 rounded-lg font-semibold text-lg hover:bg-indigo-700 shadow-lg transition duration-300 transform hover:scale-105">
       Dapatkan API Key Gratis
     </a>
   </div>

   <div class="pb-24">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto text-center">
        
        <div class="bg-white p-6 rounded-lg shadow-lg border-t-4 border-indigo-500">
          <h3 class="text-lg font-semibold text-gray-500 uppercase">Total User Terdaftar</h3>
          <p class="text-5xl font-bold text-gray-900 mt-3">
            <%= locals.stats ? stats.users.toLocaleString('id-ID') : '0' %>
          </p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-lg border-t-4 border-indigo-500">
          <h3 class="text-lg font-semibold text-gray-500 uppercase">Total API Request</h3>
          <p class="text-5xl font-bold text-gray-900 mt-3">
             <%= locals.stats ? stats.requests.toLocaleString('id-ID') : '0' %>
          </p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-lg border-t-4 border-indigo-500">
          <h3 class="text-lg font-semibold text-gray-500 uppercase">IP Anda Saat Ini</h3>
          <p class="text-4xl md:text-5xl font-bold text-gray-900 mt-3 font-mono break-all">
            <%= locals.visitorIp ? visitorIp : 'N/A' %>
          </p>
        </div>
        
      </div>
   </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburgerBtn = document.getElementById('hamburger-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    hamburgerBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  });
</script>

<%- include('../../partials/footer') %>