<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<header class="bg-white shadow">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Manajemen User</h1>
  </div>
</header>

<main class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
    <% if (locals.error) { %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <%= error %>
        </div>
    <% } %>
    <% if (locals.success) { %>
         <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <%= success %>
        </div>
    <% } %>

    <div class="bg-white shadow-md rounded-lg overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th> <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Usage</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Aksi</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% users.forEach(user => { %>
            <tr class=" <%= user.isBanned ? 'bg-red-50 opacity-60' : '' %> "> <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.email %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                 <span class="font-bold px-2 py-1 rounded-full text-xs <%= user.role === 'PREMIUM' ? 'bg-yellow-100 text-yellow-800' : 'bg-indigo-100 text-indigo-800' %>">
                    <%= user.role %>
                 </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                 <span class="font-bold px-2 py-1 rounded-full text-xs <%= user.isBanned ? 'bg-red-200 text-red-900' : 'bg-green-100 text-green-800' %>">
                    <%= user.isBanned ? 'DIBLOKIR' : 'AKTIF' %>
                 </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 font-mono">
                <%= user.apiKey ? `${user.apiKey.hitCount} / ${user.apiKey.monthlyLimit}` : 'N/A' %>
              </td>
              
               <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-3 flex items-center">
                <a href="/admin/users/edit/<%= user.id %>" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                
                <% if (user.isBanned) { %>
                    <form action="/admin/users/unban/<%= user.id %>" method="POST" class="inline">
                        <button type="submit" class="text-green-600 hover:text-green-900">Unban</button>
                    </form>
                <% } else { %>
                    <form action="/admin/users/ban/<%= user.id %>" method="POST" class="inline">
                        <button type="submit" class="text-yellow-600 hover:text-yellow-900">Ban</button>
                    </form>
                <% } %>

                <form action="/admin/users/delete/<%= user.id %>" method="POST" class="inline" onsubmit="return confirm('YAKIN HAPUS user ini? Semua data, key, dan log akan hilang permanen.');">
                    <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
</main>

<%- include('../partials/footer') %>